<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Application theme. -->

    <style name="CustomTheme" parent="MaterialDrawerTheme.Light">
        <item name="windowActionModeOverlay">true</item>
	    <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>
	    <item name="android:windowActionBarOverlay">true</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="PreferenceScreen" parent="CustomTheme">
        <item name="android:textColor">@color/larisaTextColorABlack</item>
    </style>

    <style name="CMOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
	     <item name="android:popupBackground">#ffffff</item>
	</style>

</resources>